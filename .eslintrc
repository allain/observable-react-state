{
  "parser": "babel-eslint",
  "extends": [
    "prettier-standard"
  ],
  "env": {
    "es6": true
  },
  "plugins": [
  ],
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "rules": {
    // don't force es6 functions to include space before paren
    "space-before-function-paren": 0,

    // allow imports mixed with non-import statements at top of file
    "import/first": 0

  }
}
